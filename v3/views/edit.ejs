<%- include("partials/header") %>
<%- include("partials/navbar") %>
<br>
		<div class="container">

<div class="content jumbotron container">
     <h1>Edit <%= game.name %> </h1>
</div>
		<div class="container">
			<div class="row">
				<div style="width: 50%; margin 0 auto; ">
			<form action="/games/<%= game._id %>?_method=PUT" method="POST">
				<div class="ui form form-group">
					<label>Name</label>
					<input class="form-control" type="text" value = "<%= game.name %>" name="game[name]"></input>	
				</div>				
				<div class="form-group">
                    <label>Image URL</label>
                    <img src="<%= game.image %>" alt="<%= game.name %>" class="img-thumbnail">
					<input class="form-control" type="text" value = "<%= game.image %>" name="game[image]"></input>
				</div>	
				<div class="form-group">
				<label>Description</label>
					<input class="form-control" type="text" value = "<%= game.description %>" name="game[description]"></input>
				</div>
			<p>
				<div class="field" rows="5" cols="80">
				<label>Story</label>
					<textarea value = "<%= game.story %>" name = "game[story]"></textarea>
				</div>	
			</p>
				<div class="form-group">
					<button class="btn-large btn-block btn-primary">Click to update</button>
				</div>
			</form>
			<a href="/games">Go back</a>
		</div>
	</div>
	</div>
</div>

<%- include("partials/footer") %>

